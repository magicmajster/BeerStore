@model List<BeerStore.Models.ShoppingCartItem>

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Beer.Name</td>
                <td>@item.Beer.Country.Name</td>
                <td>@item.Beer.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Beer.Price * item.Quantity)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.BeerId" class="btn btn-danger btn-sm">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h3>Total Price: @ViewBag.TotalPrice.ToString("C")</h3>
</div>

<a asp-action="ClearCart" class="btn btn-warning">Clear Cart</a>
<a asp-controller="Beers" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
